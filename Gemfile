# A sample Gemfile
source "https://rubygems.org"

gem "rake"

# web ----
gem "rack"
gem "sinatra"
gem "rack-flash3"
gem "sinatra-partial"
gem "json"

# dev/debugging ----
gem "tux"
gem "capistrano", "2.15.5"

# database ----
gem "sinatra-activerecord"
gem "sqlite3" # technically only needed for dev
# gem "mysql2"

# authentication ----
gem "omniauth"
gem "omniauth-google-oauth2"
gem "omniauth-strava"
gem "omniauth-mapmyfitness-oauth2"

group :test do
  gem 'mocha'
  gem "simplecov", "~> 0.7.1"
  gem "rack-test"
end

# api ----
gem "mmf"
gem "dotenv"
gem "nokogiri"
