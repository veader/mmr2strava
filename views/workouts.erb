<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Workouts
    </h1>
    <ol class="breadcrumb">
      <li class="active">
        <i class="fa fa-dashboard"></i>  <a href="index.html">Workouts</a>
      </li>
      <!--
      <li class="active">
        <i class="fa fa-table"></i> Tables
      </li>
      -->
    </ol>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <h4>
      <%= @month.strftime("%B, %Y") %>
    </h4>

    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Date</th>
            <th>Distance</th>
            <th>Time</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @workouts.each_with_index do |workout, index| %>
            <tr>
              <td>
                <a href="/workout/<%= workout.workout_id %>/download" title="download GPX file"><i class="fa fa-cloud-download"></i></a>
              </td>
              <td><%= workout.json["name"] %></td>
              <td><%= DateTime.parse(workout.json["start_datetime"]).strftime("%b %d, %l:%M %P") %></td>
              <td><%= display_in_miles workout.json["aggregates"]["distance_total"] %> miles</td>
              <td><%= display_time workout.json["aggregates"]["elapsed_time_total"] %></td>
              <td>
                <% if workout.has_heartrate_data? %>
                  <i class="fa fa-heart text-danger" title="has heartrate data"></i>
                <% else %>
                  <i class="fa fa-heart-o text-muted" title="no heartrate data"></i>
                <% end  %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
