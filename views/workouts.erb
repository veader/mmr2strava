<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Workouts
    </h1>
    <ol class="breadcrumb">
      <li class="active">
        <i class="fa fa-dashboard"></i>  <a href="index.html">Workouts</a>
      </li>
      <!--
      <li class="active">
        <i class="fa fa-table"></i> Tables
      </li>
      -->
    </ol>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Date</th>
            <th>Distance</th>
            <th>Time</th>
          </tr>
        </thead>
        <tbody>
          <% @workouts.each_with_index do |workout, index| %>
            <tr>
              <td><a href="#">view</a></td>
              <td><%= workout.json["name"] %></td>
              <td><%= DateTime.parse(workout.json["start_datetime"]).rfc2822 %></td>
              <td><%= "%0.2f" % (workout.json["aggregates"]["distance_total"].to_f * 0.00062137) %></td>
              <td><%= "%0.2f" % (workout.json["aggregates"]["elapsed_time_total"].to_f / 60) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
